			.clear
		.ui-icon.ui-icon-unlocked.lock.height(:style => 'float:left;')
		.clear
	.section
	  %span.label padding
	  .bin-padding.dropdown.text
	    %input(:type => 'text', :value =>'0px')
			.bin-padding.values
			.clear
		.ui-icon.ui-icon-unlocked.lock.padding(:style => 'float:left;')
	  %span.label margin
	  .bin-margin.dropdown.text
	    %input(:type => 'text', :value =>'0px')
			.bin-margin.values
			.clear
		.ui-icon.ui-icon-unlocked.lock.margin(:style => 'float:left;')
		.clear
	.right.section(:style => 'border:none;')
		#information.ui-icon.ui-icon-radio-on
	.right.section
		%ul
			%li.ui-icon.ui-icon-pencil.typing
			%li.ui-icon.ui-icon-wrench.content-edit
			%li.ui-icon.ui-icon-document.preview
	.clear


